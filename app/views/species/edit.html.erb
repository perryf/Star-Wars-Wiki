<div class="edit-form">
  <h2>Edit this Species</h2>
</div>
  <%= form_for @species do |f| %>
  <div class="edit-form">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="edit-form">
    <%= f.label :homeworld %>
    <%= select(:species, :homeworld_id, Homeworld.all.collect{|planet| [planet.name, planet.id ]}) %>
  </div>

  <div class="edit-form">
    <%= f.label :img_url %>
    <%= f.text_field :img_url %>
  </div>

  <div class="edit-form">
    <%= f.label :designation %>
    <%= f.text_field :designation %>
  </div>

  <div class="edit-form">
    <%= f.label :classification %>
    <%= f.text_field :classification %>
  </div>

  <div class="edit-form">
    <%= f.label :average_height %>
    <%= f.text_field :average_height %>
  </div>

  <div class="edit-form">
    <%= f.label :average_lifespan %>
    <%= f.text_field :average_lifespan %>
  </div>

  <div class="edit-form">
    <%= f.label :language %>
    <%= f.text_field :language %>
  </div>

  <div class="edit-form">
    <%= f.label :skin_colors %>
    <%= f.text_field :skin_colors %>
  </div>

  <div class="edit-form">
    <%= f.label :films %>
    <%= f.text_field :films %>
  </div>

  <div class="edit-form">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to "Commit genocide on this species??", species_path(@species), method: :delete, class: "delete species-link", :data => {:confirm => 'This will wipe out the entire species.  Are you sure??????'} %>
