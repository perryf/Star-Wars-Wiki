<h2><%= @vehicle.name %></h2>

<img src="<%= @vehicle.img_url %>" alt="<%= @vehicle.name %>" width= "300px">

<p>Class: <%= @vehicle.vehicle_class %></p>
<p>Model: <%= @vehicle.model %></p>
<p>Manufacturer: <%= @vehicle.manufacturer %></p>
<p>Length: <%= @vehicle.length %> Ft</p>
<p>Cost in Credits: <%= @vehicle.cost_in_credits %></p>
<p>Cargo Capacity: <%= @vehicle.cargo_capacity %></p>
<p>Max Speed: <%= @vehicle.max_atmosphering_speed %></p>
<p>Crew: <%= @vehicle.crew %></p>
<p>Passengers: <%= @vehicle.passengers %></p>
<p>Films: <%= @vehicle.films %></p>
<p>Notable Drivers</p>
<% @vehicle.characters.each do |character| %>
  <ul>
    <li><a href="<%= character_path(character) %>"><%= character.name %></a></li>
  </ul>
<% end %>

<%= link_to "Edit this Vehicle", edit_vehicle_path %>
